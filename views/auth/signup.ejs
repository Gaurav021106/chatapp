<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeIn {
      animation: fadeIn 1s ease forwards;
    }

    @keyframes backgroundShift {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
    .bg-animated {
      background: linear-gradient(270deg, #5E6572, #7D98A1, #A9B4C2);
      background-size: 600% 600%;
      animation: backgroundShift 15s ease infinite;
    }
  </style>
</head>
<body class="bg-animated w-screen h-screen flex justify-center items-center">
  <form
    action="/create"
    method="POST"
    class="animate-fadeIn w-[90%] sm:w-[400px] bg-[#7D98A1] rounded-3xl p-6 flex flex-col items-center shadow-lg"
  >
    <script>
      function validateForm(e) {
        const username = document.querySelector('input[name="username"]').value.trim();
        const password = document.querySelector('input[name="password"]').value.trim();
        const email = document.querySelector('input[name="email"]').value.trim();
        
        if (!username || !password || !email) {
          e.preventDefault();
          alert('All fields are required');
          return false;
        }
        
        if (username.length < 3) {
          e.preventDefault();
          alert('Username must be at least 3 characters long');
          return false;
        }
        
        if (password.length < 6) {
          e.preventDefault();
          alert('Password must be at least 6 characters long');
          return false;
        }
        
        const emailRegex = /^\w+([.-]?\w+)*@\w+([.-]?\w+)*(\.\w{2,3})+$/;
        if (!emailRegex.test(email)) {
          e.preventDefault();
          alert('Please enter a valid email address');
          return false;
        }
        
        return true;
      }
    </script>
    <h1 class="text-3xl font-bold text-white mb-8">Create Account</h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4 text-sm w-full">
        <%= error %>
      </div>
    <% } %>

    <input
      type="text"
      name="username"
      placeholder="Enter Username"
      minlength="3"
      maxlength="30"
      required
      class="w-full bg-[#A9B4C2] text-sm text-center font-semibold rounded-3xl h-10 mb-3 transition duration-300 hover:bg-[#D9D9D9] focus:outline-none focus:ring-2 focus:ring-blue-400 focus:shadow-lg"
    />
    <input
      type="email"
      name="email"
      placeholder="Enter Email"
      required
      class="w-full bg-[#A9B4C2] text-sm text-center font-semibold rounded-3xl h-10 mb-3 transition duration-300 hover:bg-[#D9D9D9] focus:outline-none focus:ring-2 focus:ring-blue-400 focus:shadow-lg"
    />
    <input
      type="password"
      name="password"
      placeholder="Enter Password"
      minlength="6"
      required
      class="w-full bg-[#A9B4C2] text-sm text-center font-semibold rounded-3xl h-10 mb-5 transition duration-300 hover:bg-[#D9D9D9] focus:outline-none focus:ring-2 focus:ring-blue-400 focus:shadow-lg"
    />
    <p class="text-xs text-gray-100 mb-3">Password must be at least 6 characters</p>

    <button
      type="submit"
      onclick="return validateForm(event)"
      class="w-full bg-blue-500 transform transition duration-300 hover:scale-105 hover:bg-blue-800 text-white font-bold rounded-3xl h-10 mb-3"
    >
      Sign Up
    </button>

    <p class="text-white text-sm">
      Already have an account?
      <a href="/" class="font-bold hover:text-[#D9D9D9] transition duration-300">Login</a>
    </p>
  </form>
</body>
</html>
